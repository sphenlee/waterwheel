{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "bundler",
        "outDir": "./dist/",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "exactOptionalPropertyTypes": true,
        "removeComments": true,
        "target": "ES2021",
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types",
            "dependency_types",
        ]
    },
}